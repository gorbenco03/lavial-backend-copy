# Server Configuration
PORT=3000
NODE_ENV=development

# MongoDB Configuration
# For local MongoDB: mongodb://localhost:27017/lavial
# For MongoDB Atlas: mongodb+srv://username:password@cluster.mongodb.net/lavial?retryWrites=true&w=majority
MONGODB_URI=mongodb://localhost:27017/lavial

# Stripe Configuration
# Get your keys from: https://dashboard.stripe.com/apikeys
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret_here

# Email Configuration (Nodemailer)
# Option 1: SendGrid
EMAIL_HOST=smtp.sendgrid.net
EMAIL_PORT=587
EMAIL_USER=apikey
EMAIL_PASSWORD=your_sendgrid_api_key_here
EMAIL_FROM=noreply@lavial.com

# Option 2: Gmail SMTP (uncomment and use instead)
# EMAIL_HOST=smtp.gmail.com
# EMAIL_PORT=587
# EMAIL_USER=your-email@gmail.com
# EMAIL_PASSWORD=your-app-password-here
# EMAIL_FROM=your-email@gmail.com

# CORS Configuration
# Comma-separated list of allowed origins (e.g., http://localhost:3000,https://app.lavial.com)
# Leave empty to allow all origins (not recommended for production)
CORS_ORIGINS=
FRONTEND_URL=

# Optional: JWT Secret (if using JWT authentication)
JWT_SECRET=your_jwt_secret_key_here

# Optional: Debug Logging
ENABLE_DEBUG_LOGS=false
